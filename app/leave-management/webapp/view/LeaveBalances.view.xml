<?xml version="1.0" encoding="UTF-8"?>
<mvc:View
    controllerName="leave.management.controller.LeaveBalances"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page
        title="{i18n>leaveBalancesTitle}"
        showNavButton="true"
        navButtonPress=".onNavBack">
        <content>
            <Table
                id="leaveBalancesTable"
                items="{
                        path: '/LeaveBalances',
                        parameters: {
                            $expand: 'employee,type'
                        }
                    }"
                growing="true"
                growingThreshold="10">
                <columns>
                    <Column>
                        <Text text="{i18n>leaveType}"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>leaveBalance}"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{type/name}"/>
                            <Text text="{balance}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button
                    text="{i18n>createLeaveRequest}"
                    type="Emphasized"
                    press=".onCreateLeaveRequest"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View> 